    <a class="carousel-control-next slideButton" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="conteiner bacgroundPost">
    <div class="conteiner posts">
        <h1 class="homeHeading">MY AMAZING TRAVEL</h1>
        <% for(var i = 0; i < allPosts.length; i++){ %>
        <div class="card postItem">
            <img src="<%= allPosts[i].image %>" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title sheetTitle"><%= allPosts[i].title %></h5>
                <p class="card-text"><%= (allPosts[i].text.substring(0, 300 )+ " ...") %></p>
                <a href="/postDetails/<%= allPosts[i].title %>" class="btn btn-success btn-lg parallaxButton">Read
                    more</a>
            </div>
        </div>
        <% }; %>
    </div>
</div>
