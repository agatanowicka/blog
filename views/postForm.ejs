<%- include('layout/header.ejs'); -%>
<div class = " newObject form allPage">
    <% if (editPost){ %>
    <h1>Edit the arcticle</h1>
    <% } else { %>
    <h1>Create a new arcticle</h1>
    <% } %>
    <form action = "<% if (editPost) { %>/postForm/<%= editPost.id %>
    <% } else { %> /postForm <% } %>"
        method="POST"  autocomplete = "off">
        <div class="form-group">
            <label>Image</label>
            <textarea class = "form-control" rows = "4" cols="50" name = "image" ><%= editPost.image %></textarea>
        </div>
        <div class="form-group">
            <label>Title</label>
            <input class = "form-control" name = "title" value="<%= editPost.title %>">
        </div>
        <div class="form-group">
            <label>Contents</label>
            <textarea class = "form-control" rows = "4" cols="50" name = "text" ><%= editPost.text %></textarea>
        </div>
        <% if (editPost) { %>
        <button type = "submit" class = "btn btn-primary button">Edit</button>
        <% } else { %>
        <button type = "submit" class = "btn btn-primary button">Add</button>
        <% } %>
    </form>
</div>
<%- include('layout/footer.ejs'); -%>