<%- include('layout/header.ejs'); -%>
<div class = "conteiner newObject">
    <h1>Create a new arcticle</h1>
    <form action = "/postForm" method="POST"  autocomplete = "off">
        <div class="form-group">
            <label>Image</label>
            <textarea class = "form-control" rows = "4" cols="50" name = "image"></textarea>
        </div>
        <div class="form-group">
            <label>Title</label>
            <input class = "form-control" name = "title">
        </div>
        <div class="form-group">
            <label>Contents</label>
            <textarea class = "form-control" rows = "4" cols="50" name = "text"></textarea>
        </div>
        <button type = "submit" class = "btn btn-primary button">Add</button>
    </form>
</div>
<%- include('layout/footer.ejs'); -%>